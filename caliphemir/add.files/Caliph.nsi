; --------------------------------------------------------
; check if java is installed ...
; otherwise open browser to download ...
; --------------------------------------------------------
Var JavaVersion
Var JavaHome

!define MUI_CUSTOMFUNCTION_GUIINIT myGuiInit

Function myGUIInit
  ClearErrors
  ReadRegStr $1 HKLM "SOFTWARE\JavaSoft\Java Runtime Environment" "CurrentVersion"
  ReadRegStr $2 HKLM "SOFTWARE\JavaSoft\Java Runtime Environment\$1" "JavaHome"
  StrCpy $JavaVersion $1
  StrCpy $JavaHome $2
  ; check if java is installed
  IfErrors 0 endJavaCheck
  ; well we found no runtime ...
  MessageBox MB_YESNO "Couldn't find a Java Runtime installed, which is needed to run ${PRODUCT_NAME} ${PRODUCT_VERSION}. Do you want to download Java Runtime now?" IDYES true IDNO false
  ; user wants to download JRE now.
  true:
      ExecShell "open" "http://java.sun.com/getjava"
      Goto endJavaCheck
  ; user doesn't want to download.
  false:
      MessageBox MB_OK "Please download and install Java Runtime from http://java.sun.com/getjava yourself to use ${PRODUCT_NAME} ${PRODUCT_VERSION}"
  ; end this game
  endJavaCheck:
FunctionEnd

